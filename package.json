{
  "private": true,
  "workspaces": [
    "app",
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "app/**/*.{js,vue,ts}": [
      "yarn workspace waane lint",
      "git add"
    ],
    "packages/**/*.{js,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
