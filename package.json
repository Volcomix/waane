{
  "private": true,
  "workspaces": [
    "app",
    "packages/*"
  ],
  "devDependencies": {
    "eslint-plugin-react": "^7.17.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "app/**/*.{js,vue,ts}": [
      "yarn workspace waane lint",
      "git add"
    ],
    "packages/node-editor/**/*.{js,ts,tsx}": [
      "yarn workspace @waane/node-editor lint",
      "git add"
    ]
  }
}
