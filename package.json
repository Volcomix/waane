{
  "name": "@waane/node-editor",
  "version": "1.0.0",
  "description": "Node editor web components",
  "main": "src/components/index.js",
  "author": "Volcomix",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all -r -p *:watch",
    "serve": "cd src && python3 -m http.server 8080",
    "serve:watch": "live-server --watch=*.html,**/*.js --ignore=**/*.test.js --no-browser src",
    "test": "wait-on http://localhost:8080/test.html && jest",
    "test:watch": "yarn test --watch",
    "test:ci": "npm-run-all -r -p serve test"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "babel-jest": "^26.2.1",
    "jest": "^26.1.0",
    "jest-puppeteer": "^4.4.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^2.1.1",
    "wait-on": "^5.1.0"
  }
}
